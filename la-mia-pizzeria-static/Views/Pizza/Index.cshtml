<nav class="navbar navbar-light bg-light">
    <a class="navbar-brand" asp-area="" asp-controller="Pizza" asp-action="Index">Home</a>
    <a class="navbar-brand" asp-area="" asp-controller="Pizza" asp-action="Create">Crea pizza</a>
</nav>

<h1>Lista pizze</h1>

@*Inizializzazione property Model RazorPage*@
@model List<Pizza>

    @if(Model.Count() == 0){
        <div>Non ci sono pizze</div>
    }else{
    <div class="text-center d-flex">
        @foreach(Pizza pizza in Model){
            <div class="card mx-2 mt-2" style="width: 18rem;">
                <img class="card-img-top" src="@pizza.Image" alt="Card image cap">
                <div class="card-body">
                    <h5 class="card-title">Pizza: @pizza.Name</h5>
                    <p class="card-text fs-6">Descrizione: @pizza.Description</p>
                </div>
                
                <div class="card-footer">
                    <div>Prezzo: @pizza.Price €</div>
                    <div class="mt-2">
                        <button type="button" class="btn btn-primary">
                            <a href="@Url.Action("Dettagli", new {id = pizza.Id})">Dettagli</a>
                        </button>
                    </div>
                </div>
            </div>
        }
    </div>
    }

<style>
    .card-img-top {
        height: 200px;
    }

    a {
        width: 100px;
        height: 30px;
        color: white; 
    }
        
    a:hover {
       color: white;
    }
</style>