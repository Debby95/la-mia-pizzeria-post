@model Pizza 

<div class="container">
    <div class="row">
        <div class="col-12">
            <h1>Dettagli pizza</h1>
            <div class="card mx-2 mt-2" style="width: 30rem;">
                <img class="card-img-top" src="@Model.Image" alt="Card image cap">
                <div class="card-body">
                    <h5 class="card-title">Pizza: @Model.Name</h5>
                    <p class="card-text fs-6">Descrizione: @Model.Description</p>
                </div>
                <div class="card-footer">
                    <div>Prezzo: @Model.Price €</div>
                </div>
            </div>            
        </div>
    </div>
</div>



